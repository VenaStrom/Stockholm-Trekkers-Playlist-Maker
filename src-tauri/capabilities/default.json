{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Media file access and write permissions.",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:app:allow-set-app-theme",
    "opener:default",
    "opener:allow-open-path",
    "opener:allow-reveal-item-in-dir",
    "fs:default",
    "fs:allow-app-meta-recursive",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:allow-temp-read",
    "fs:allow-temp-write",
    "fs:allow-exists",
    "fs:allow-copy-file",
    "dialog:default",
    "dialog:allow-open"
  ]
}